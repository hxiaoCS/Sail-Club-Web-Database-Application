@model IEnumerable<HXSail.Models.MembershipType>

@{
    ViewData["Title"] = "List of Membership Types";
}

<h2>List of Membership Types</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RatioToFull)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.MembershipTypeName
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RatioToFull)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MembershipTypeName">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MembershipTypeName">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MembershipTypeName">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
